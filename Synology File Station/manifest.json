{
  "manifest_version": 2,

  "name": "Synology File Station",
  "description": "Manage DiskStation files via File Station API",
  "version": "0.1",

  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png"
  },

  "permissions": [
    "storage",
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": "icons/icon_16.png",
    "default_title": "Synology File Station",
    "default_popup": "popup.html"
  },

  "options_page" : "options.html"
}
